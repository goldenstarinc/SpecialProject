<Window x:Class="Interface_Preprocessor_WPF.DecryptedDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Interface_Preprocessor_WPF"
        mc:Ignorable="d"
        Title="DecryptedDataWindow" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="639*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textBox" 
                 AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto" 
                 TextWrapping="Wrap" 
                 IsReadOnly="True" Margin="0,10,0,0" Grid.Row="1" FontFamily="Segoe UI Variable Display" FontSize="22" BorderBrush="{x:Null}"/>
        <Rectangle Stroke="#FF00ACFF" Fill="#FF00ACFF"/>
        <TextBlock Margin="10,7,210,0" TextWrapping="Wrap" Text="Расшифровка данных" FontFamily="Segoe UI Variable Display" FontSize="36" Height="45" VerticalAlignment="Top"/>
    </Grid>
</Window>
